        'pending': 'var(--warning-color)',
        'in_progress': 'var(--info-color)',
        'completed': 'var(--success-color)',
        'failed': 'var(--danger-color)'
      };

      const statusColor = statusColors[task.status] || 'var(--text-secondary)';
      const statusText = task.status ? task.status.replace('_', ' ').toUpperCase() : 'UNKNOWN';

      content.innerHTML = `
        <div class="mb-3">
          <div class="d-flex justify-content-between align-items-center mb-2">
            <strong style="color: #f0f0f0; font-size: 0.9rem;">Task ${task.id ? task.id.substring(0, 8) : ''}</strong>
            <span class="modern-badge" style="background: ${statusColor}20; color: ${statusColor}; border: 1px solid ${statusColor};">${statusText}</span>
          </div>
        </div>

        <div class="mb-3" style="border-top: 1px solid var(--border-color); padding-top: 0.75rem;">
          <h6 style="color: #f0f0f0; font-size: 0.875rem; font-weight: 600; margin-bottom: 0.5rem;">Description</h6>
          <p style="color: #d0d0d0; margin: 0; white-space: pre-wrap;">${escapeHtml(task.description || 'No description')}</p>
        </div>

        <div class="mb-3" style="border-top: 1px solid var(--border-color); padding-top: 0.75rem;">
          <div class="d-flex justify-content-between mb-2">
            <span style="color: #b0b0b0;">From:</span>
            <strong style="color: #f0f0f0;">${escapeHtml(task.from || 'N/A')}</strong>
          </div>
          <div class="d-flex justify-content-between mb-2">
            <span style="color: #b0b0b0;">To:</span>
            <strong style="color: #f0f0f0;">${escapeHtml(task.to || 'N/A')}</strong>
          </div>
          <div class="d-flex justify-content-between">
            <span style="color: #b0b0b0;">Priority:</span>
            <strong style="color: #f0f0f0;">${task.priority || 1}/5</strong>
          </div>
        </div>

        ${task.result ? `
          <div class="mb-2" style="border-top: 1px solid var(--border-color); padding-top: 0.75rem;">
            <h6 style="color: #f0f0f0; font-size: 0.875rem; font-weight: 600; margin-bottom: 0.5rem;">Result</h6>
            <p style="color: #a0d0a0; margin: 0; white-space: pre-wrap;">${escapeHtml(task.result)}</p>
          </div>
        ` : ''}

        ${task.error ? `
          <div class="mb-2" style="border-top: 1px solid var(--border-color); padding-top: 0.75rem;">
            <h6 style="color: #f0f0f0; font-size: 0.875rem; font-weight: 600; margin-bottom: 0.5rem;">Error</h6>
            <p style="color: #d0a0a0; margin: 0; white-space: pre-wrap;">${escapeHtml(task.error)}</p>
          </div>
        ` : ''}
      `;
    }

    function hideTaskDetails() {
      const panel = document.getElementById('task-details-panel');
      panel.style.display = 'none';
      currentTask = null;
    }

    async function deleteCurrentTask() {
      if (!currentTask || !currentStudioId) return;

      if (!confirm(`Are you sure you want to delete this task?`)) {
        return;
      }

      try {
        const response = await fetch(`/api/studios/${currentStudioId}/tasks/${currentTask.id}`, {
          method: 'DELETE'
        });

        if (response.ok) {
          hideTaskDetails();
          loadCanvasStudio(currentStudioId);
        } else {
          alert('Failed to delete task: ' + await response.text());
        }
      } catch (error) {
        console.error('Failed to delete task:', error);
        alert('Failed to delete task');
      }
    }

    async function executeCurrentTask() {
      if (!currentTask || !currentStudioId) return;

      const executeBtn = document.getElementById('execute-task-btn');
      const originalText = executeBtn.innerHTML;

      // Show loading state
      executeBtn.disabled = true;
      executeBtn.innerHTML = `
        <span class="spinner-border spinner-border-sm me-1" role="status"></span>
        Executing...
      `;

      try {
        const response = await fetch(`/api/studios/${currentStudioId}/tasks/${currentTask.id}/execute`, {
          method: 'POST'
        });

        if (response.ok) {
          const data = await response.json();
          // Close details and reload canvas to see updated status
          hideTaskDetails();
          loadCanvasStudio(currentStudioId);

          // Show success message
          alert('Task execution started! Check the canvas for status updates.');
        } else {
          const error = await response.text();
          alert('Failed to execute task: ' + error);
          executeBtn.disabled = false;
          executeBtn.innerHTML = originalText;
        }
      } catch (error) {
        console.error('Failed to execute task:', error);
        alert('Failed to execute task');
        executeBtn.disabled = false;
        executeBtn.innerHTML = originalText;
      }
    }

    // Update metrics
    function updateMetrics(metrics) {
      document.getElementById('metric-tasks').textContent = metrics.total || 0;
      document.getElementById('metric-completed').textContent = metrics.completed || 0;
      document.getElementById('metric-progress').textContent = metrics.inProgress || 0;

      const rate = metrics.total > 0 ? Math.round((metrics.completed / metrics.total) * 100) : 0;
      document.getElementById('metric-rate').textContent = rate + '%';
    }

    // Add timeline event
    function addTimelineEvent(event) {
      const timeline = document.getElementById('timeline-content');

      // Remove "no events" message
      if (timeline.querySelector('.text-muted')) {
        timeline.innerHTML = '';
      }

      const eventDiv = document.createElement('div');
      eventDiv.className = 'border-start border-3 ps-2 mb-2';
      eventDiv.style.borderColor = getEventColor(event.type);

      const time = new Date().toLocaleTimeString();
      const eventLabel = getEventLabel(event.type);

      eventDiv.innerHTML = `
        <div class="d-flex justify-content-between align-items-start">
          <small style="color: var(--text-primary); font-weight: 500;">${eventLabel}</small>
          <small style="color: var(--text-muted);">${time}</small>
        </div>
        ${event.data && event.data.mission ? `<small style="color: var(--text-secondary);">${escapeHtml(event.data.mission)}</small>` : ''}
        ${event.data && event.data.task_id ? `<small style="color: var(--text-secondary);">Task: ${event.data.task_id.substring(0, 8)}</small>` : ''}
        ${event.data && event.data.assigned_to ? `<small style="color: var(--text-secondary);">Agent: ${escapeHtml(event.data.assigned_to)}</small>` : ''}
      `;

      timeline.insertBefore(eventDiv, timeline.firstChild);

      // Keep only last 20 events
      while (timeline.children.length > 20) {
        timeline.removeChild(timeline.lastChild);
      }
    }

    function getEventColor(type) {
      const colors = {
        'task_created': 'var(--info-color)',
        'task_started': 'var(--primary-color)',
        'task_completed': 'var(--success-color)',
        'task_failed': 'var(--danger-color)',
        'message_sent': 'var(--secondary-color)',
        'mission_started': 'var(--warning-color)'
      };
      return colors[type] || 'var(--text-muted)';
    }

    function getEventLabel(type) {
      const labels = {
        'task_created': 'Task Created',
        'task_started': 'Task Started',
        'task_completed': 'Task Completed',
        'task_failed': 'Task Failed',
        'message_sent': 'Message Sent',
        'mission_started': 'Mission Set'
      };
      return labels[type] || type;
    }

    // Canvas controls
    function toggleCanvasSidebar() {
      const sidebar = document.getElementById('canvas-sidebar');
      const mainArea = document.getElementById('canvas-main-area');

      if (sidebar.style.display === 'none') {
        sidebar.style.display = 'block';
        mainArea.className = 'col-lg-9';
      } else {
        sidebar.style.display = 'none';
        mainArea.className = 'col-lg-12';
      }

      // Trigger canvas resize
      if (window.agentCanvas) {
        window.agentCanvas.resize();
      }
    }

    function resetCanvasView() {
      if (window.agentCanvas) {
        window.agentCanvas.offsetX = 0;
        window.agentCanvas.offsetY = 0;
        window.agentCanvas.scale = 1;
        window.agentCanvas.draw();
      }
    }

    function toggleCanvasAnimation() {
      if (window.agentCanvas) {
        window.agentCanvas.animationPaused = !window.agentCanvas.animationPaused;
        const btn = document.getElementById('animation-toggle');
        if (window.agentCanvas.animationPaused) {
          btn.innerHTML = '<svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M14,19H18V5H14M6,19H10V5H6V19Z"/></svg>';
          btn.title = 'Resume Animation';
        } else {
          btn.innerHTML = '<svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M8,5.14V19.14L19,12.14L8,5.14Z"/></svg>';
          btn.title = 'Pause Animation';
        }
      }
    }

    async function exportCanvas() {
      if (!window.agentCanvas) {
        alert('No canvas to export');
        return;
      }

      try {
        // Create a temporary canvas with white background
        const canvas = document.getElementById('agent-canvas');
        const tempCanvas = document.createElement('canvas');
        tempCanvas.width = canvas.width;
        tempCanvas.height = canvas.height;

        const tempCtx = tempCanvas.getContext('2d');
        tempCtx.fillStyle = '#ffffff';
        tempCtx.fillRect(0, 0, tempCanvas.width, tempCanvas.height);
        tempCtx.drawImage(canvas, 0, 0);

        // Convert to blob and download
        tempCanvas.toBlob(blob => {
          const url = URL.createObjectURL(blob);
          const a = document.createElement('a');
          a.href = url;
          a.download = `agent-studio-${currentStudioId}-${Date.now()}.png`;
          document.body.appendChild(a);
          a.click();
          document.body.removeChild(a);
          URL.revokeObjectURL(url);
        });
      } catch (error) {
        console.error('Failed to export canvas:', error);
        alert('Failed to export canvas');
      }
    }

    function changeCanvasBackground(color) {
      if (window.agentCanvas) {
        window.agentCanvas.backgroundColor = color;
        window.agentCanvas.draw();
      }
    }

  </script>
