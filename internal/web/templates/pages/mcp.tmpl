{{define "mcp"}}
<!DOCTYPE html>
<html data-bs-theme="light">
{{template "head.tmpl" .}}

<body class="bg-light">
  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg glassmorphism position-fixed w-100 top-0" style="z-index: 1030; backdrop-filter: blur(10px);">
    <div class="container-fluid px-4">
      <div class="d-flex align-items-center w-100">
        <a href="/" class="modern-btn modern-btn-secondary me-3" title="Back to Chat">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
            <path d="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z"/>
          </svg>
        </a>

        <a class="navbar-brand fw-bold d-flex align-items-center" href="/mcp" style="color: var(--primary-color);">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor" class="me-2">
            <path d="M13,9H18.5L13,3.5V9M6,2H14L20,8V20A2,2 0 0,1 18,22H6C4.89,22 4,21.1 4,20V4C4,2.89 4.89,2 6,2M15,18V16H6V18H15M18,14V12H6V14H18Z"/>
          </svg>
          MCP Management
        </a>

        <div class="d-flex align-items-center gap-3 ms-auto">
          <button id="darkModeToggle" class="modern-btn modern-btn-secondary">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 3c-4.97 0-9 4.03-9 9s4.03 9 9 9 9-4.03 9-9c0-.46-.04-.92-.1-1.36-.98 1.37-2.58 2.26-4.4 2.26-2.98 0-5.4-2.42-5.4-5.4 0-1.81.89-3.42 2.26-4.4-.44-.06-.9-.1-1.36-.1z"/>
            </svg>
            <span>Dark</span>
          </button>
        </div>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container-fluid" style="margin-top: 80px; padding: 2rem;">
    <div class="row justify-content-center">
      <div class="col-lg-11 col-xl-10">

        <!-- Header with Add Button -->
        <div class="modern-card p-4 mb-4">
          <div class="d-flex align-items-center justify-content-between">
            <div>
              <h5 class="mb-1" style="color: var(--text-primary);">Configured MCP Servers</h5>
              <p class="mb-0 text-muted small">Manage Model Context Protocol servers for extending agent capabilities</p>
            </div>
            <button id="addServerBtn" class="modern-btn modern-btn-primary">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" class="me-1">
                <path d="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z"/>
              </svg>
              Add MCP Server
            </button>
          </div>
        </div>

        <!-- MCP Servers List -->
        <div class="modern-card p-4">
          <h5 class="mb-4" style="color: var(--text-primary);">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" class="me-2">
              <path d="M4,6H20V16H4M20,18A2,2 0 0,0 22,16V6C22,4.89 21.1,4 20,4H4C2.89,4 2,4.89 2,6V16A2,2 0 0,0 4,18H0V20H24V18H20Z"/>
            </svg>
            MCP Servers
          </h5>

          <div id="mcpServersList">
            <div class="text-center py-5">
              <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
              </div>
            </div>
          </div>

          <!-- Empty State -->
          <div id="emptyState" class="text-center py-5" style="display: none;">
            <svg width="64" height="64" viewBox="0 0 24 24" fill="currentColor" style="opacity: 0.3; color: var(--text-secondary);" class="mb-3">
              <path d="M4,6H20V16H4M20,18A2,2 0 0,0 22,16V6C22,4.89 21.1,4 20,4H4C2.89,4 2,4.89 2,6V16A2,2 0 0,0 4,18H0V20H24V18H20Z"/>
            </svg>
            <p style="color: var(--text-secondary);">No MCP servers configured</p>
            <button class="modern-btn modern-btn-primary mt-2" onclick="document.getElementById('addServerBtn').click()">
              Add Your First Server
            </button>
          </div>
        </div>

      </div>
    </div>
  </div>

  <!-- Add Server Modal -->
  <div class="modal fade" id="addServerModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
      <div class="modal-content" style="background: var(--bg-secondary); border: 1px solid var(--border-color);">
        <div class="modal-header" style="border-bottom: 1px solid var(--border-color);">
          <h5 class="modal-title" style="color: var(--text-primary);">Add MCP Server</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <!-- Tabs -->
          <ul class="nav nav-tabs mb-4" id="addServerTabs" role="tablist">
            <li class="nav-item" role="presentation">
              <button class="nav-link active" id="marketplace-tab" data-bs-toggle="tab" data-bs-target="#marketplace" type="button" role="tab">Marketplace</button>
            </li>
            <li class="nav-item" role="presentation">
              <button class="nav-link" id="manual-tab" data-bs-toggle="tab" data-bs-target="#manual" type="button" role="tab">Manual Configuration</button>
            </li>
            <li class="nav-item" role="presentation">
              <button class="nav-link" id="import-tab" data-bs-toggle="tab" data-bs-target="#import" type="button" role="tab">Import File</button>
            </li>
          </ul>

          <!-- Tab Content -->
          <div class="tab-content" id="addServerTabContent">
            <!-- Marketplace Tab -->
            <div class="tab-pane fade show active" id="marketplace" role="tabpanel">
              <div class="mb-3">
                <input type="text" id="marketplaceSearch" class="form-control" placeholder="Search servers..." style="background: var(--bg-tertiary); border: 1px solid var(--border-color); color: var(--text-primary);">
              </div>
              <div id="marketplaceList" class="list-group" style="max-height: 400px; overflow-y: auto;">
                <div class="text-center py-3">
                  <div class="spinner-border text-primary" role="status"></div>
                </div>
              </div>
            </div>

            <!-- Manual Configuration Tab -->
            <div class="tab-pane fade" id="manual" role="tabpanel">
              <form id="manualConfigForm">
                <div class="mb-3">
                  <label class="form-label fw-semibold" style="color: var(--text-primary);">Server Name *</label>
                  <input type="text" id="manualName" class="form-control" required placeholder="e.g., filesystem" style="background: var(--bg-tertiary); border: 1px solid var(--border-color); color: var(--text-primary);">
                </div>
                <div class="mb-3">
                  <label class="form-label fw-semibold" style="color: var(--text-primary);">Command *</label>
                  <input type="text" id="manualCommand" class="form-control" required placeholder="e.g., npx" style="background: var(--bg-tertiary); border: 1px solid var(--border-color); color: var(--text-primary);">
                </div>
                <div class="mb-3">
                  <label class="form-label fw-semibold" style="color: var(--text-primary);">Arguments (JSON array)</label>
                  <textarea id="manualArgs" class="form-control" rows="3" placeholder='["-y", "@modelcontextprotocol/server-filesystem", "/path"]' style="background: var(--bg-tertiary); border: 1px solid var(--border-color); color: var(--text-primary);"></textarea>
                  <small class="form-text" style="color: var(--text-secondary);">Enter as JSON array, e.g., ["-y", "package-name"]</small>
                </div>
                <div class="mb-3">
                  <label class="form-label fw-semibold" style="color: var(--text-primary);">Environment Variables (JSON object)</label>
                  <textarea id="manualEnv" class="form-control" rows="3" placeholder='{"API_KEY": "value"}' style="background: var(--bg-tertiary); border: 1px solid var(--border-color); color: var(--text-primary);"></textarea>
                  <small class="form-text" style="color: var(--text-secondary);">Enter as JSON object, e.g., {"KEY": "value"}</small>
                </div>
                <div class="mb-3">
                  <label class="form-label fw-semibold" style="color: var(--text-primary);">Transport</label>
                  <select id="manualTransport" class="form-select" style="background: var(--bg-tertiary); border: 1px solid var(--border-color); color: var(--text-primary);">
                    <option value="stdio" selected>stdio</option>
                    <option value="sse">sse</option>
                  </select>
                </div>
                <button type="submit" class="modern-btn modern-btn-primary w-100">Add Server</button>
              </form>
            </div>

            <!-- Import File Tab -->
            <div class="tab-pane fade" id="import" role="tabpanel">
              <div class="mb-3">
                <label class="form-label fw-semibold" style="color: var(--text-primary);">Upload Configuration File</label>
                <input type="file" id="importFileInput" class="form-control" accept=".json,.yaml,.yml" style="background: var(--bg-tertiary); border: 1px solid var(--border-color); color: var(--text-primary);">
                <small class="form-text" style="color: var(--text-secondary);">Upload a JSON or YAML file containing MCP server configurations</small>
              </div>
              <div id="importPreview" class="mt-3" style="display: none;">
                <h6 style="color: var(--text-primary);">Preview:</h6>
                <pre id="importPreviewContent" style="background: var(--bg-tertiary); padding: 1rem; border-radius: 4px; color: var(--text-primary); max-height: 300px; overflow-y: auto;"></pre>
              </div>
              <button id="importBtn" class="modern-btn modern-btn-primary w-100" style="display: none;">Import Servers</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Remove Confirmation Modal -->
  <div class="modal fade" id="removeServerModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content" style="background: var(--bg-secondary); border: 1px solid var(--border-color);">
        <div class="modal-header" style="border-bottom: 1px solid var(--border-color);">
          <h5 class="modal-title" style="color: var(--text-primary);">Confirm Removal</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body" style="color: var(--text-primary);">
          <p>Are you sure you want to remove <strong id="removeServerName"></strong>?</p>
          <p class="text-muted">This action cannot be undone.</p>
        </div>
        <div class="modal-footer" style="border-top: 1px solid var(--border-color);">
          <button type="button" class="modern-btn modern-btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" id="confirmRemoveBtn" class="modern-btn modern-btn-danger">Remove</button>
        </div>
      </div>
    </div>
  </div>

  <style>
    /* Better text contrast for light mode */
    [data-bs-theme="light"] .form-label,
    [data-bs-theme="light"] .modal-title,
    [data-bs-theme="light"] .modal-body {
      color: #1e293b !important;
    }

    [data-bs-theme="light"] .form-text,
    [data-bs-theme="light"] .text-muted {
      color: #64748b !important;
    }

    [data-bs-theme="light"] .form-control::placeholder,
    [data-bs-theme="light"] .form-select::placeholder {
      color: #94a3b8 !important;
    }
  </style>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="js/mcp.js"></script>
</body>
</html>
{{end}}
