<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{{.Title}}</title>
  <script>
    // Apply server-side theme immediately to prevent flash
    (function() {
      {{if eq .Theme "dark"}}
        document.documentElement.classList.add('dark-mode');
      {{else}}
        document.documentElement.classList.remove('dark-mode');
      {{end}}
    })();
  </script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
    
    :root {
      --primary-color: #1d4ed8;
      --primary-light: #2563eb;
      --primary-dark: #1e40af;
      --secondary-color: #64748b;
      --success-color: #10b981;
      --danger-color: #ef4444;
      --warning-color: #f59e0b;
      --info-color: #06b6d4;
      
      --bg-primary: #ffffff;
      --bg-secondary: #f8fafc;
      --bg-tertiary: #f1f5f9;
      --text-primary: #0f172a;
      --text-secondary: #475569;
      --text-muted: #94a3b8;
      --border-color: #e2e8f0;
      --border-light: #f1f5f9;
      
      --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
      --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
      --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
      --shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);
      
      --radius-sm: 0.375rem;
      --radius-md: 0.5rem;
      --radius-lg: 0.75rem;
      --radius-xl: 1rem;
    }
    
    .dark-mode {
      --bg-primary: #0f172a;
      --bg-secondary: #1e293b;
      --bg-tertiary: #334155;
      --text-primary: #f8fafc;
      --text-secondary: #cbd5e1;
      --text-muted: #94a3b8;
      --border-color: #334155;
      --border-light: #475569;
    }
    
    * {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    }
    
    body {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%) !important;
      color: var(--text-primary);
      min-height: 100vh;
      font-size: 14px;
      line-height: 1.5;
      transition: all 0.3s ease;
      position: relative;
    }

    /* Dark mode body backgrounds - handle all cases */
    .dark-mode body,
    body.dark-mode,
    .dark-mode .bg-light,
    .dark-mode body.bg-light,
    body.dark-mode.bg-light {
      background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #334155 100%) !important;
    }

    /* Animated background particles */
    body::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="20" cy="20" r="2" fill="rgba(255,255,255,0.1)"/><circle cx="80" cy="80" r="1" fill="rgba(255,255,255,0.1)"/><circle cx="40" cy="60" r="1.5" fill="rgba(255,255,255,0.1)"/><circle cx="90" cy="10" r="1" fill="rgba(255,255,255,0.1)"/><circle cx="60" cy="30" r="2" fill="rgba(255,255,255,0.1)"/></svg>') repeat;
      animation: float 20s ease-in-out infinite;
      pointer-events: none;
      z-index: -1;
    }

    @keyframes float {
      0%, 100% { transform: translateY(0px) rotate(0deg); }
      50% { transform: translateY(-10px) rotate(180deg); }
    }
    
    .modern-card {
      background: rgba(255, 255, 255, 0.15);
      backdrop-filter: blur(20px);
      border: 1px solid rgba(255, 255, 255, 0.2);
      border-radius: var(--radius-lg);
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
      transition: all 0.3s ease;
    }

    .modern-card:hover {
      background: rgba(255, 255, 255, 0.25);
      box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
      transform: translateY(-2px);
      border-color: rgba(255, 255, 255, 0.3);
    }

    .dark-mode .modern-card {
      background: rgba(15, 23, 42, 0.4);
      border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .dark-mode .modern-card:hover {
      background: rgba(15, 23, 42, 0.6);
      border-color: rgba(255, 255, 255, 0.2);
    }
    
    .modern-btn {
      border-radius: var(--radius-md);
      font-weight: 500;
      font-size: 13px;
      padding: 0.5rem 1rem;
      transition: all 0.2s ease;
      border: 1px solid rgba(255, 255, 255, 0.2);
      cursor: pointer;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      backdrop-filter: blur(10px);
      position: relative;
      overflow: hidden;
    }

    .modern-btn::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
      transition: left 0.5s;
    }

    .modern-btn:hover::before {
      left: 100%;
    }

    .modern-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
      border-color: rgba(255, 255, 255, 0.3);
    }
    
    .modern-btn-primary {
      background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
      color: white;
    }
    
    .modern-btn-secondary {
      background: rgba(255, 255, 255, 0.1);
      color: var(--text-primary);
      border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .modern-btn-secondary:hover {
      background: rgba(255, 255, 255, 0.2);
      color: var(--text-primary);
    }

    .dark-mode .modern-btn-secondary {
      background: rgba(15, 23, 42, 0.3);
      color: var(--text-primary);
    }

    .dark-mode .modern-btn-secondary:hover {
      background: rgba(15, 23, 42, 0.5);
    }
    
    .modern-btn-success {
      background: linear-gradient(135deg, var(--success-color) 0%, #34d399 100%);
      color: white;
    }
    
    .modern-btn-danger {
      background: linear-gradient(135deg, var(--danger-color) 0%, #f87171 100%);
      color: white;
    }
    
    .modern-input {
      border: 1px solid rgba(255, 255, 255, 0.2);
      border-radius: var(--radius-md);
      padding: 0.75rem;
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      color: var(--text-primary);
      font-size: 14px;
      transition: all 0.2s ease;
    }

    .modern-input:focus {
      outline: none;
      border-color: rgba(255, 255, 255, 0.4);
      background: rgba(255, 255, 255, 0.15);
      box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.2);
    }

    .dark-mode .modern-input {
      background: rgba(15, 23, 42, 0.3);
      border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .dark-mode .modern-input:focus {
      background: rgba(15, 23, 42, 0.5);
      border-color: rgba(255, 255, 255, 0.2);
    }
    
    .modern-badge {
      font-size: 11px;
      font-weight: 600;
      padding: 0.25rem 0.5rem;
      border-radius: var(--radius-sm);
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }
    
    .badge-primary { background: var(--primary-color); color: white; }
    .badge-secondary { background: var(--bg-tertiary); color: var(--text-secondary); }
    .badge-success { background: var(--success-color); color: white; }
    .badge-info { background: var(--info-color); color: white; }
    
    .glassmorphism {
      background: rgba(255, 255, 255, 0.15);
      backdrop-filter: blur(20px);
      border: 1px solid rgba(255, 255, 255, 0.2);
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    }

    .dark-mode .glassmorphism {
      background: rgba(15, 23, 42, 0.4);
      border: 1px solid rgba(255, 255, 255, 0.1);
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    }

    .glassmorphism-strong {
      background: rgba(255, 255, 255, 0.25);
      backdrop-filter: blur(30px);
      border: 1px solid rgba(255, 255, 255, 0.3);
      box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
    }

    .dark-mode .glassmorphism-strong {
      background: rgba(15, 23, 42, 0.6);
      border: 1px solid rgba(255, 255, 255, 0.15);
    }
    
    .fade-in {
      animation: fadeIn 0.3s ease-in-out;
    }
    
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    /* Chat message styling */
    .message-container {
      display: flex;
      flex-direction: column;
    }
    
    .user-message {
      align-items: flex-end;
    }
    
    .assistant-message {
      align-items: flex-start;
    }
    
    /* Typing indicator animation */
    .typing-dots {
      display: inline-flex;
      gap: 2px;
    }
    
    .typing-dots span {
      width: 4px;
      height: 4px;
      border-radius: 50%;
      background: var(--text-secondary);
      animation: typing 1.4s infinite;
    }
    
    .typing-dots span:nth-child(2) {
      animation-delay: 0.2s;
    }
    
    .typing-dots span:nth-child(3) {
      animation-delay: 0.4s;
    }
    
    @keyframes typing {
      0%, 60%, 100% {
        transform: translateY(0);
        opacity: 0.5;
      }
      30% {
        transform: translateY(-8px);
        opacity: 1;
      }
    }
    
    .modern-list-item {
      background: var(--bg-primary);
      border: 1px solid var(--border-color);
      border-radius: var(--radius-md);
      padding: 1rem;
      margin-bottom: 0.5rem;
      transition: all 0.2s ease;
    }
    
    .modern-list-item:hover {
      border-color: var(--primary-color);
      box-shadow: var(--shadow-sm);
    }
    
    .modern-section-header {
      font-weight: 600;
      font-size: 15px;
      color: var(--text-primary);
      margin-bottom: 0.75rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    
    .status-indicator {
      width: 8px;
      height: 8px;
      border-radius: 50%;
      display: inline-block;
    }
    
    .status-online { background: var(--success-color); }
    .status-offline { background: var(--secondary-color); }
    
    /* Scrollbar styling */
    ::-webkit-scrollbar {
      width: 6px;
    }
    
    ::-webkit-scrollbar-track {
      background: var(--bg-secondary);
    }
    
    ::-webkit-scrollbar-thumb {
      background: var(--border-color);
      border-radius: 3px;
    }
    
    ::-webkit-scrollbar-thumb:hover {
      background: var(--text-muted);
    }
    
    /* Nav pills styling */
    .nav-pills .nav-link {
      background: transparent;
      border: none;
      color: var(--text-secondary);
      font-weight: 500;
      transition: all 0.2s ease;
    }
    
    .nav-pills .nav-link:hover {
      background: rgba(99, 102, 241, 0.1);
      color: var(--primary-color);
      transform: translateY(-1px);
    }
    
    .nav-pills .nav-link.active {
      background: var(--primary-color) !important;
      color: white !important;
      box-shadow: var(--shadow-sm);
    }

    /* Dark mode button update */
    .dark-mode #darkModeToggle span {
      display: none;
    }
    
    .dark-mode #darkModeToggle:after {
      content: "Light";
    }
    
    #darkModeToggle span {
      display: inline;
    }
    
    /* Improved modal styling */
    .modal-content {
      background: var(--bg-primary);
      border: 1px solid var(--border-color);
      border-radius: var(--radius-lg);
      box-shadow: var(--shadow-xl);
    }
    
    /* Improved offcanvas sidebar width */
    .offcanvas-start {
      --bs-offcanvas-width: 450px;
    }
    
    /* Responsive offcanvas width */
    @media (max-width: 576px) {
      .offcanvas-start {
        --bs-offcanvas-width: 85vw;
      }
    }
    
    /* Plugin registry button styling */
    #registryList .list-group-item,
    #localRegistryList .list-group-item,
    #downloadablePluginsList .list-group-item {
      padding: 1rem 1.25rem;
    }
    
    #registryList .btn-sm,
    #localRegistryList .btn-sm,
    #downloadablePluginsList .btn-sm {
      min-width: 80px;
      white-space: nowrap;
    }
    
    /* Local plugins section styling */
    #localRegistryList .list-group-item {
      border-left: 3px solid var(--success-color);
    }
    
    /* Downloadable plugins section styling */
    #downloadablePluginsList .list-group-item {
      border-left: 3px solid var(--primary-color);
    }
    
    /* Plugin section headers */
    .pills-plugins h6 svg {
      vertical-align: text-top;
    }
    
    .modal-header {
      border-bottom: 1px solid var(--border-color);
      background: var(--bg-secondary);
      border-radius: var(--radius-lg) var(--radius-lg) 0 0;
    }
    
    .modal-title {
      color: var(--text-primary);
      font-weight: 600;
    }
    
    /* Structured content styling */
    .chat-content {
      line-height: 1.6;
    }
    
    .chat-content h1, .chat-content h2, .chat-content h3, 
    .chat-content h4, .chat-content h5, .chat-content h6 {
      color: var(--text-primary);
      margin: 0.75rem 0 0.5rem 0;
      font-weight: 600;
    }
    
    .chat-content h2 {
      font-size: 1.1rem;
      border-bottom: 1px solid var(--border-color);
      padding-bottom: 0.25rem;
    }
    
    .chat-content table {
      width: 100%;
      border-collapse: collapse;
      margin: 0.75rem 0;
      background: var(--bg-primary);
      border-radius: var(--radius-md);
      overflow: hidden;
      box-shadow: var(--shadow-sm);
    }
    
    .chat-content thead {
      background: var(--primary-color);
      color: white;
    }
    
    .chat-content th,
    .chat-content td {
      padding: 0.5rem 0.75rem;
      text-align: left;
      border-bottom: 1px solid var(--border-color);
    }
    
    .chat-content th {
      font-weight: 600;
      font-size: 0.875rem;
      text-transform: uppercase;
      letter-spacing: 0.025em;
    }
    
    .chat-content tbody tr:hover {
      background: var(--bg-tertiary);
    }
    
    .chat-content tbody tr:last-child td {
      border-bottom: none;
    }
    
    .chat-content code {
      background: var(--bg-tertiary);
      color: var(--primary-color);
      padding: 0.125rem 0.25rem;
      border-radius: var(--radius-sm);
      font-family: 'SF Mono', 'Monaco', 'Cascadia Code', 'Roboto Mono', monospace;
      font-size: 0.875em;
    }
    
    .chat-content pre {
      background: var(--bg-tertiary);
      padding: 0.75rem;
      border-radius: var(--radius-md);
      overflow-x: auto;
      margin: 0.75rem 0;
    }
    
    .chat-content pre code {
      background: none;
      padding: 0;
    }
    
    .chat-content ul, .chat-content ol {
      margin: 0.5rem 0;
      padding-left: 1.25rem;
    }
    
    .chat-content li {
      margin: 0.25rem 0;
    }
    
    .chat-content blockquote {
      border-left: 3px solid var(--primary-color);
      padding-left: 0.75rem;
      margin: 0.75rem 0;
      color: var(--text-secondary);
      font-style: italic;
    }
    
    .chat-content strong {
      color: var(--text-primary);
      font-weight: 600;
    }
    
    .chat-content em {
      color: var(--text-secondary);
    }
    
    .chat-content p {
      margin: 0.5rem 0;
    }
    
    /* Special content indicators */
    .content-type-indicator {
      display: inline-flex;
      align-items: center;
      gap: 0.25rem;
      font-size: 0.75rem;
      color: var(--text-muted);
      margin-bottom: 0.5rem;
    }
    
    .content-type-table::before {
      content: "ðŸ“Š";
    }
    
    .content-type-list::before {
      content: "ðŸ“‹";
    }
    
    .content-type-structured::before {
      content: "ðŸ”§";
    }
    
    /* Interactive elements */
    .copy-button {
      position: absolute;
      top: 0.5rem;
      right: 0.5rem;
      background: var(--bg-tertiary);
      border: 1px solid var(--border-color);
      border-radius: var(--radius-sm);
      padding: 0.25rem 0.5rem;
      font-size: 0.75rem;
      cursor: pointer;
      opacity: 0;
      transition: all 0.2s ease;
      color: var(--text-secondary);
    }
    
    .chat-content pre:hover .copy-button {
      opacity: 1;
    }
    
    .copy-button:hover {
      background: var(--primary-color);
      color: white;
    }
    
    .table-info {
      font-size: 0.75rem;
      color: var(--text-muted);
      margin-top: 0.5rem;
      text-align: center;
    }
    
    /* Enhanced code styling */
    .chat-content code:not(pre code) {
      background: linear-gradient(135deg, var(--bg-tertiary) 0%, var(--bg-secondary) 100%);
      border: 1px solid var(--border-color);
    }
    
    /* Improved table hover effects */
    .chat-content tbody tr {
      transition: all 0.2s ease;
    }
    
    .chat-content tbody tr:hover {
      background: var(--bg-tertiary) !important;
      transform: translateY(-1px);
      box-shadow: var(--shadow-sm);
    }

    /* Sidebar styling */
    .main-content-wrapper {
      position: relative;
      min-height: 100vh;
    }

    .sidebar {
      width: var(--sidebar-width, 300px);
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(20px);
      border: 1px solid rgba(255, 255, 255, 0.2);
      border-left: none;
      border-radius: 0 var(--radius-xl) var(--radius-xl) 0;
      padding: 1rem;
      overflow: hidden;
      position: fixed;
      left: 0;
      top: 76px;
      bottom: 0;
      z-index: 1020;
      min-width: 250px;
      max-width: 600px;
      transition: width 0.1s ease;
      box-shadow: 4px 0 20px rgba(0, 0, 0, 0.1);
    }

    .dark-mode .sidebar {
      background: rgba(15, 23, 42, 0.4);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-left: none;
    }

    /* Sidebar scrollable content wrapper */
    .sidebar-content {
      height: 100%;
      overflow-y: auto;
      padding-right: 4px;
      margin-right: -4px;
    }

    /* Custom scrollbar for sidebar that respects rounded corners */
    .sidebar-content::-webkit-scrollbar {
      width: 6px;
    }

    .sidebar-content::-webkit-scrollbar-track {
      background: transparent;
      border-radius: 3px;
    }

    .sidebar-content::-webkit-scrollbar-thumb {
      background: rgba(255, 255, 255, 0.3);
      border-radius: 3px;
      transition: background 0.2s ease;
    }

    .sidebar-content::-webkit-scrollbar-thumb:hover {
      background: rgba(255, 255, 255, 0.5);
    }

    .dark-mode .sidebar-content::-webkit-scrollbar-thumb {
      background: rgba(255, 255, 255, 0.2);
    }

    .dark-mode .sidebar-content::-webkit-scrollbar-thumb:hover {
      background: rgba(255, 255, 255, 0.3);
    }

    .main-content {
      padding: 1rem;
      padding-top: 92px;
      transition: margin-left 0.1s ease, max-width 0.1s ease;
      min-height: 100vh;
    }

    /* Only apply sidebar margin on large screens where sidebar is visible */
    @media (min-width: 992px) {
      .main-content {
        margin-left: var(--sidebar-width, 300px);
        max-width: calc(100vw - var(--sidebar-width, 300px) - 2rem);
        width: calc(100vw - var(--sidebar-width, 300px) - 2rem);
      }

      /* Remove margin when sidebar is hidden */
      .sidebar.d-none ~ .main-content {
        margin-left: 0;
        max-width: 100vw;
        width: 100vw;
      }
    }

    /* Resize handle */
    .sidebar-resize-handle {
      position: absolute;
      top: 0;
      right: 0;
      width: 4px;
      height: 100%;
      cursor: col-resize;
      background: transparent;
      transition: background-color 0.2s ease;
      z-index: 1021;
    }

    .sidebar-resize-handle:hover {
      background: var(--primary-color);
    }

    .sidebar-resize-handle:active {
      background: var(--primary-dark);
    }

    /* Resize active state */
    .sidebar-resizing {
      user-select: none;
      pointer-events: none;
    }

    .sidebar-resizing .sidebar-resize-handle {
      background: var(--primary-color);
    }

    .sidebar-section {
      margin-bottom: 1.5rem;
    }

    .agent-item,
    .plugin-item,
    .setting-item {
      padding: 0.75rem;
      margin-bottom: 0.5rem;
      border-radius: var(--radius-md);
      background: var(--bg-secondary);
      border: 1px solid var(--border-color);
      cursor: pointer;
      transition: all 0.2s ease;
      overflow: hidden;
    }

    .agent-item:hover,
    .plugin-item:hover {
      background: var(--bg-tertiary);
    }

    /* Plugin item responsive layout */
    .plugin-item .d-flex {
      align-items: flex-start !important;
      gap: 0.5rem;
    }

    .plugin-item .d-flex > div:first-child {
      flex: 1;
      min-width: 0;
      overflow-wrap: break-word;
    }

    .plugin-item .d-flex > div:last-child {
      flex-shrink: 0;
      display: flex;
      flex-direction: column;
      align-items: flex-end;
      gap: 0.25rem;
    }

    /* Compact layout for narrow sidebar */
    .sidebar-compact .plugin-item .d-flex > div:last-child {
      flex-direction: column;
      align-items: center;
      gap: 0.25rem;
    }

    .sidebar-compact .plugin-item .plugin-remove-btn {
      margin-right: 0 !important;
      margin-bottom: 0.25rem;
      padding: 0.25rem;
      min-width: 24px;
      width: 24px;
      height: 24px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .sidebar-compact .plugin-item .plugin-remove-btn svg {
      width: 12px;
      height: 12px;
    }

    .sidebar-compact .plugin-item .form-switch {
      margin: 0;
      transform: scale(0.9);
